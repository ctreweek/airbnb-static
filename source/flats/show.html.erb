<% flat = data.flats[owner] %>

<div class="banner-dynamic" style="background-image: url('<%= image_path flat.picture %>'); height: 30vh; background-position: center;">
</div>


<div class="container">
  <div class="row">
    <div class="col xs-12 col-sm-6 col-sm-offset-1">
      <div class="header-flat-details">
        <div class="header-flat-owner text-center">
          <%= image_tag flat.owner_picture, class: "img-circle avatar-dynamic" %>
          <p><%= flat.owner_name %></p>
        </div>
        <div class="header-flat-name">
          <h1><%= flat.summary %></h1>
          <p><%= flat.city %></p>
          <i class="fa fa-star" style="color: #ffb400"></i>
          <i class="fa fa-star" style="color: #ffb400"></i>
          <i class="fa fa-star" style="color: #ffb400"></i>
          <i class="fa fa-star" style="color: #ffb400"></i>
          <i class="fa fa-star" style="color: #cacccd"></i>
        </div>
      </div>
    </div>
    <div class="col xs-12 col-sm-4 form-book">
      <h4>Book this flat</h4>
      <form class="form-inline">
        <div class="form-group">
          <input type="text" class="form-control" id="exampleInputName2" placeholder="checkin">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="exampleInputEmail2" placeholder="checkout">
        </div>
        <div class="dropdown">
          <select class="form-control">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
        </div>
        <button type="submit" class="btn btn-danger">Book it</button>
      </form>

    </div>
  </div>
</div>

